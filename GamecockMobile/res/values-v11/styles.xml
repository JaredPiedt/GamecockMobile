<resources>

    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!-- API 11 theme customizations can go here. -->
    </style>

    <style name="HomeActionBarTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/HomeActionBar</item>
    </style>

    <style name="HomeActionBar" parent="android:style/Widget.Holo.ActionBar">
        <item name="android:background">#73000F</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleText</item>
    </style>

    <style name="ActionBarTitleText" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="CourseListActionBarTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/CourseListActionBar</item>
    </style>

    <style name="CourseListActionBar" parent="android:style/Widget.Holo.ActionBar">
        <item name="android:background">#73000F</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleText</item>
    </style>

    <style name="AddCourseActionBarTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/AddCourseActionBar</item>
    </style>

    <style name="AddCourseActionBar" parent="android:style/Widget.Holo.ActionBar">
        <item name="android:background">#73000F</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleText</item>
    </style>

    <style name="AddDayAndTimeActionBarTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/AddDayAndTimeActionBar</item>
    </style>

    <style name="AddDayAndTimeActionBar" parent="android:style/Widget.Holo.ActionBar">
        <item name="android:background">#73000F</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleText</item>
    </style>

</resources>