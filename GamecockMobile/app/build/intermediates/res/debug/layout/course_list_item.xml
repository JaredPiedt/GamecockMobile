<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    android:orientation="vertical"
    android:paddingBottom="0dp"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="6dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/course_list_item_selector"
        android:paddingLeft="15dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/course_list_item_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/course_list_item_selector"
            android:gravity="center_vertical"
            android:layout_marginBottom="-8dp"
            android:minHeight="?android:attr/actionBarSize"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/garnet" />

        <TextView
            android:id="@+id/course_list_item_times"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/course_list_item_selector"
            android:gravity="center_vertical"
            android:minHeight="?android:attr/actionBarSize"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/accent_garnet" 
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout><!-- From: file:/Users/piedt/Documents/GamecockMobile/GamecockMobile/app/src/main/res/layout/course_list_item.xml -->